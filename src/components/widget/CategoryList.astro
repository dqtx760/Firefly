---
/**
 * 文章分类组件
 * 显示所有分类及其文章数量
 */
import { getCollection } from "astro:content";

// 获取所有文章并统计分类
const allPosts = await getCollection("posts", ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true;
});

// 统计每个分类的文章数量
const categoryCount = new Map<string, number>();
for (const post of allPosts) {
    const category = post.data.category || "未分类";
    categoryCount.set(category, (categoryCount.get(category) || 0) + 1);
}

// 自定义分类排序顺序（使用英文名称，因为文章用的是英文）
const categoryOrder = ["Software", "Technical", "AIHacks"];

// 只显示指定的3个分类
const validCategories = new Set(["Software", "Technical", "AIHacks"]);

// 转换为数组并按自定义顺序排序
const categories = Array.from(categoryCount.entries())
    .filter(([name]) => validCategories.has(name)) // 只显示指定的分类
    .map(([name, count]) => ({
        name,
        count
    }))
    .sort((a, b) => {
        const aIndex = categoryOrder.indexOf(a.name);
        const bIndex = categoryOrder.indexOf(b.name);
        return aIndex - bIndex;
    });
---

<div class="category-list">
    <div class="category-header">
        <div class="decoration-line"></div>
        <span class="hacker-icon">&gt;_</span>
        <span class="category-title">文章分类</span>
        <div class="decoration-line"></div>
    </div>

    <div class="flex flex-col gap-2">
        {categories.map((category, index) => {
            const displayCount = category.count < 10 ? `0${category.count}` : String(category.count);
            return (
                <a href={`/categories/${category.name}/`} class="category-item group">
                    <div class="category-card">
                        <span class="category-name">{category.name}</span>
                        <span class="category-count">{displayCount}</span>
                    </div>
                </a>
            );
        })}
    </div>
</div>

<style>
    .category-list {
        padding: 0.5rem 0;
    }

    .category-header {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 12px;
    }

    .decoration-line {
        flex: 1;
        height: 1px;
        border-top: 1px dashed oklch(0.85 0.005 268);
        opacity: 0.5;
    }

    html.dark .decoration-line {
        border-top-color: oklch(0.30 0.01 268);
    }

    .hacker-icon {
        font-size: 13px;
        font-weight: 600;
        color: oklch(0.58 0.16 268);
        font-family: 'Courier New', 'Consolas', monospace;
    }

    .category-title {
        font-size: 12px;
        font-weight: 600;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        color: oklch(0.50 0.01 268);
    }

    html.dark .category-title {
        color: oklch(0.65 0.01 268);
    }

    .category-item {
        text-decoration: none;
        display: block;
    }

    .category-card {
        background: oklch(0.95 0.004 268 / 0.4);
        backdrop-filter: blur(8px);
        border-radius: 2px;
        padding: 10px 14px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        transition: all 0.2s ease;
        border: 1px solid oklch(0.58 0.16 268 / 0.2);
    }

    html.dark .category-card {
        background: oklch(0.25 0.008 268 / 0.4);
        border-color: oklch(0.58 0.16 268 / 0.25);
    }

    .category-card:hover {
        background: oklch(0.95 0.004 268 / 0.6);
        border-color: oklch(0.58 0.16 268 / 0.35);
        transform: translateX(2px);
    }

    html.dark .category-card:hover {
        background: oklch(0.25 0.008 268 / 0.6);
        border-color: oklch(0.58 0.16 268 / 0.4);
    }

    .category-name {
        font-size: 14px;
        color: oklch(0.30 0.01 268);
        font-weight: 600;
        transition: color 0.2s ease;
    }

    html.dark .category-name {
        color: oklch(0.80 0.01 268);
    }

    .category-card:hover .category-name {
        color: oklch(0.58 0.16 268);
    }

    html.dark .category-card:hover .category-name {
        color: oklch(0.70 0.14 268);
    }

    .category-count {
        font-size: 12px;
        color: oklch(0.50 0.01 268);
        font-variant-numeric: tabular-nums;
        font-weight: 600;
        transition: color 0.2s ease;
    }

    html.dark .category-count {
        color: oklch(0.55 0.01 268);
    }

    .category-card:hover .category-count {
        color: oklch(0.58 0.16 268);
    }
</style>
