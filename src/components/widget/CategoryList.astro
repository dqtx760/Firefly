---
/**
 * 文章分类组件
 * 显示所有分类及其文章数量
 */
import { getCollection } from "astro:content";

// 获取所有文章并统计分类
const allPosts = await getCollection("posts", ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true;
});

// 统计每个分类的文章数量
const categoryCount = new Map<string, number>();
for (const post of allPosts) {
    const category = post.data.category || "未分类";
    categoryCount.set(category, (categoryCount.get(category) || 0) + 1);
}

// 自定义分类排序顺序（使用英文名称，因为文章用的是英文）
const categoryOrder = ["Software", "Technical", "AIHacks"];

// 只显示指定的3个分类
const validCategories = new Set(["Software", "Technical", "AIHacks"]);

// 转换为数组并按自定义顺序排序
const categories = Array.from(categoryCount.entries())
    .filter(([name]) => validCategories.has(name)) // 只显示指定的分类
    .map(([name, count]) => ({
        name,
        count
    }))
    .sort((a, b) => {
        const aIndex = categoryOrder.indexOf(a.name);
        const bIndex = categoryOrder.indexOf(b.name);
        return aIndex - bIndex;
    });

// 所有分类都使用居中对齐（文字居中，数字在右侧）
const categoryAlign = new Map<string, "left" | "center">();
categoryAlign.set("Software", "center");
categoryAlign.set("AIHacks", "center");
categoryAlign.set("Technical", "center");

// 为每个分类定义绿色系的配色方案（同色系不同深浅，增加饱和度）
const categoryColors = new Map<string, { bg: string, border: string, shadow: string, hoverBg: string }>();
categoryColors.set("Software", {
    bg: "rgba(52, 211, 153, 0.85)",           // 亮绿 - 提高饱和度
    border: "rgba(52, 211, 153, 0.5)",
    shadow: "rgba(52, 211, 153, 0.35), 0 4px 12px rgba(52, 211, 153, 0.2)",
    hoverBg: "rgba(52, 211, 153, 0.95)"
});
categoryColors.set("Technical", {
    bg: "rgba(16, 185, 129, 0.88)",           // 中绿 - 提高饱和度和对比度
    border: "rgba(16, 185, 129, 0.55)",
    shadow: "rgba(16, 185, 129, 0.4), 0 4px 12px rgba(16, 185, 129, 0.25)",
    hoverBg: "rgba(16, 185, 129, 0.98)"
});
categoryColors.set("AIHacks", {
    bg: "rgba(5, 150, 105, 0.90)",            // 深绿 - 最深，最高对比
    border: "rgba(5, 150, 105, 0.6)",
    shadow: "rgba(5, 150, 105, 0.45), 0 4px 12px rgba(5, 150, 105, 0.3)",
    hoverBg: "rgba(5, 150, 105, 1)"
});
---

<div class="category-list">
    <div class="category-header">
        <div class="decoration-line"></div>
        <span class="hacker-icon">&gt;_</span>
        <span class="decoration-title gradient-text-cat">文章分类</span>
        <div class="decoration-line"></div>
    </div>

    <div class="flex flex-col gap-2">
        {categories.map((category, index) => {
            const align = categoryAlign.get(category.name) || "center";
            const colors = categoryColors.get(category.name) || categoryColors.get("Software")!;
            const displayCount = category.count < 10 ? `0${category.count}` : String(category.count);
            return (
                <a href={`/categories/${category.name}/`} class="category-item group">
                    <div class="category-card" style={`animation-delay: ${index * 0.05}s; --cat-bg: ${colors.bg}; --cat-border: ${colors.border}; --cat-shadow: ${colors.shadow}; --cat-hover-bg: ${colors.hoverBg};`}>
                        <div class="category-card-border"></div>
                        <div class={`category-card-content category-card-${align}`}>
                            <span class="category-name">{category.name}</span>
                            <span class="category-count">{displayCount}</span>
                        </div>
                    </div>
                </a>
            );
        })}
    </div>
</div>

<style>
    .category-list {
        padding: 0.5rem 0;
    }

    .category-header {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 12px;
    }

    .decoration-line {
        flex: 1;
        height: 1px;
        border-top: 1px dashed;
        border-color: oklch(0.85 0.01 var(--hue));
        opacity: 0.6;
    }

    .dark .decoration-line {
        border-color: oklch(0.35 0.02 var(--hue));
    }

    .hacker-icon {
        font-size: 14px;
        font-weight: 700;
        color: var(--primary);
        font-family: 'Courier New', 'Consolas', monospace;
        letter-spacing: -1px;
        background: linear-gradient(135deg, #10b981, #34d399);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .dark .hacker-icon {
        background: linear-gradient(135deg, #34d399, #6ee7b7);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .decoration-title {
        font-size: 14px;
        font-weight: 600;
        white-space: nowrap;
    }

    .category-item {
        text-decoration: none;
        display: block;
    }

    .category-card {
        position: relative;
        background: var(--cat-bg);
        backdrop-filter: blur(10px);
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        animation: slideIn 0.4s ease-out backwards;
        border: 1px solid var(--cat-border);
        box-shadow: var(--cat-shadow);
    }

    .category-card:hover {
        background: var(--cat-hover-bg);
        transform: translateX(6px) translateY(-2px);
        box-shadow: 0 8px 24px var(--cat-shadow), 0 0 0 1px var(--cat-border);
    }

    .category-card-border {
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 3px;
        background: linear-gradient(180deg, var(--primary), var(--primary) / 0.5);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .category-card:hover .category-card-border {
        opacity: 1;
    }

    .category-card-content {
        display: flex;
        align-items: center;
        padding: 10px 14px;
        gap: 8px;
    }

    /* 左对齐：名称和数字都在左侧 */
    .category-card-left {
        justify-content: flex-start;
    }

    /* 居中对齐：名称居中，数字在右侧 */
    .category-card-center {
        justify-content: space-between;
    }

    .category-card-center .category-name {
        flex: 1;
        text-align: center;
    }

    .category-name {
        font-size: 14px;
        color: #0f2025 !important;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .dark .category-name {
        color: #0f2025 !important;
    }

    .category-card:hover .category-name {
        color: #0a1619 !important;
    }

    .dark .category-card:hover .category-name {
        color: #0a1619 !important;
    }

    /* 文章分类标题渐变 - 绿色系 */
    .gradient-text-cat {
        background: linear-gradient(135deg, #10b981, #34d399);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .dark .gradient-text-cat {
        background: linear-gradient(135deg, #34d399, #6ee7b7);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .category-count {
        font-size: 11px;
        font-weight: 500;
        color: oklch(0.55 0.05 var(--hue));
        background: transparent;
        padding: 2px 8px;
        border-radius: 12px;
        border: 1px solid oklch(0.90 0.02 var(--hue));
        transition: all 0.3s ease;
        min-width: 24px;
        text-align: center;
        flex-shrink: 0;
    }

    .dark .category-count {
        color: oklch(0.65 0.05 var(--hue));
        border-color: oklch(0.35 0.03 var(--hue));
    }

    .category-card:hover .category-count {
        background: var(--primary);
        color: rgb(20, 20, 20);
        border-color: var(--primary);
    }

    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(-10px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
</style>
