---
/**
 * 文章分类组件
 * 显示所有分类及其文章数量
 */
import { getCollection } from "astro:content";

// 获取所有文章并统计分类
const allPosts = await getCollection("posts", ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true;
});

// 统计每个分类的文章数量
const categoryCount = new Map<string, number>();
for (const post of allPosts) {
    const category = post.data.category || "未分类";
    categoryCount.set(category, (categoryCount.get(category) || 0) + 1);
}

// 自定义分类排序顺序（使用英文名称，因为文章用的是英文）
const categoryOrder = ["Software", "Technical", "AIHacks"];

// 只显示指定的3个分类
const validCategories = new Set(["Software", "Technical", "AIHacks"]);

// 转换为数组并按自定义顺序排序
const categories = Array.from(categoryCount.entries())
    .filter(([name]) => validCategories.has(name)) // 只显示指定的分类
    .map(([name, count]) => ({
        name,
        count
    }))
    .sort((a, b) => {
        const aIndex = categoryOrder.indexOf(a.name);
        const bIndex = categoryOrder.indexOf(b.name);
        return aIndex - bIndex;
    });
---

<div class="category-list">
    <div class="category-header">
        <span class="category-title">文章分类</span>
    </div>

    <div class="category-rail">
        {categories.map((category, index) => {
            const displayCount = category.count < 10 ? `0${category.count}` : String(category.count);
            const isCurrent = Astro.url.pathname === `/categories/${category.name}/` ||
                             (Astro.url.pathname === '/' && index === 0);
            return (
                <a href={`/categories/${category.name}/`} class:list={["category-item", { "category-current": isCurrent }]}>
                    <span class="category-name">{category.name}</span>
                    <span class="category-count">{displayCount}</span>
                </a>
            );
        })}
    </div>
</div>

<style>
    .category-list {
        padding: 0;
    }

    .category-header {
        margin-bottom: 0;
        padding-bottom: 12px;
        border-bottom: 1px solid oklch(0.85 0.005 268);
    }

    html.dark .category-header {
        border-bottom-color: oklch(0.30 0.01 268);
    }

    .category-title {
        font-size: 12px;
        font-weight: 500;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        color: oklch(0.45 0.01 268);
    }

    html.dark .category-title {
        color: oklch(0.60 0.01 268);
    }

    /* 栏位容器 - 连续区域 */
    .category-rail {
        display: flex;
        flex-direction: column;
        padding: 4px 0;
    }

    /* 分类项 - 线性、垂直、规整 */
    .category-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 10px 8px;
        text-decoration: none;
        border-left: 2px solid transparent;
        transition: all 0.15s ease;
        position: relative;
    }

    /* 未选中态 - 退到背景 */
    .category-item:not(.category-current) {
        margin-left: 0;
    }

    .category-item:not(.category-current) .category-name {
        color: oklch(0.50 0.01 268);
        font-weight: 400;
    }

    html.dark .category-item:not(.category-current) .category-name {
        color: oklch(0.60 0.01 268);
    }

    .category-item:not(.category-current) .category-count {
        color: oklch(0.55 0.01 268);
    }

    html.dark .category-item:not(.category-current) .category-count {
        color: oklch(0.50 0.01 268);
    }

    /* 悬停态 */
    .category-item:not(.category-current):hover {
        background: oklch(0.96 0.002 268);
        margin-left: 2px;
    }

    html.dark .category-item:not(.category-current):hover {
        background: oklch(0.24 0.005 268);
    }

    /* 当前分类 - 站出来 */
    .category-current {
        background: oklch(0.95 0.004 268);
        border-left-color: oklch(0.58 0.16 268);
        padding-left: 12px;
        margin-right: -8px;
    }

    html.dark .category-current {
        background: oklch(0.26 0.008 268);
    }

    .category-current .category-name {
        color: oklch(0.25 0.01 268);
        font-weight: 500;
    }

    html.dark .category-current .category-name {
        color: oklch(0.85 0.01 268);
    }

    .category-current .category-count {
        color: oklch(0.58 0.16 268);
        font-weight: 500;
    }

    .category-name {
        font-size: 14px;
        transition: all 0.15s ease;
    }

    .category-count {
        font-size: 12px;
        font-variant-numeric: tabular-nums;
        transition: all 0.15s ease;
    }
</style>
