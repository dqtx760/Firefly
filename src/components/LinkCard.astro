---
/**
 * LinkCard - 导航链接卡片组件
 * 用于展示导航网站链接卡片
 */
interface Props {
    name: string;
    description: string;
    url: string;
    icon: string;
}

const { name, description, url, icon } = Astro.props;
---

<a href={url} target="_blank" rel="noopener noreferrer" class="link-card">
    <div class="link-card-inner">
        <div class="link-card-icon">{icon}</div>
        <div class="link-card-content">
            <div class="link-card-name">{name}</div>
            <div class="link-card-description">{description}</div>
        </div>
    </div>
</a>

<style>
    .link-card {
        display: block;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .link-card-inner {
        background: rgb(255, 255, 255);
        border-radius: 12px;
        padding: 16px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 12px;
        height: 100%;
    }

    .dark .link-card-inner {
        background: rgb(45, 45, 45);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    }

    .link-card:hover .link-card-inner {
        transform: translateY(-2px);
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    }

    .dark .link-card:hover .link-card-inner {
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    }

    .link-card-icon {
        font-size: 32px;
        line-height: 1;
        flex-shrink: 0;
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgb(245, 245, 245);
        border-radius: 10px;
    }

    .dark .link-card-icon {
        background: rgb(55, 55, 55);
    }

    .link-card-content {
        flex: 1;
        min-width: 0;
    }

    .link-card-name {
        font-size: 15px;
        font-weight: 600;
        color: rgb(30, 30, 30);
        margin-bottom: 4px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .dark .link-card-name {
        color: rgb(230, 230, 230);
    }

    .link-card-description {
        font-size: 13px;
        color: rgb(140, 140, 140);
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .dark .link-card-description {
        color: rgb(160, 160, 160);
    }

    .link-card:hover .link-card-name {
        color: var(--primary);
    }

    .link-card:hover .link-card-icon {
        background: var(--primary) / 0.1;
    }
</style>
